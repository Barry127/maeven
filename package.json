    "prebuild": "yarn clear",
    "build": "rollup --config",
    "generate": "node scripts/generate",
    "lint": "eslint src/**/*.ts{,x}",
    "prestart": "yarn parseData",
    "start": "yarn parseData --watch & react-app-rewired start",
    "parseData": "node scripts/parseData.js",
    "test": "react-app-rewired test",
    "test:ci": "CI=true yarn test",
