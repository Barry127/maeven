{
  "name": "maeven",
  "version": "0.2.3",
  "description": "React Components for modern web apps",
  "main": "cjs/index.js",
  "module": "index.mjs",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Barry de Kleijn",
    "email": "kleijn.barry@gmail.com",
    "url": "https://github.com/barry127"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Barry127/maeven.git"
  },
  "bugs": {
    "url": "https://github.com/Barry127/maeven/issues"
  },
  "homepage": "http://barry127.github.io/maeven/",
  "dependencies": {
    "@types/color": "^3.0.1",
    "clsx": "^1.1.1",
    "color": "^3.1.3",
    "react-autosize-textarea": "^7.1.0",
    "react-spring": "^8.0.27",
    "react-use-measure": "^2.0.2"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "@mdx-js/loader": "^1.6.18",
    "@next/mdx": "^9.5.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.7",
    "@types/jest": "^24.0.0",
    "@types/mdx-js__react": "^1.5.3",
    "@types/node": "^12.0.0",
    "@types/prettier": "^2.1.2",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.6",
    "chokidar": "^3.4.2",
    "coveralls": "^3.1.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.5.3",
    "next": "^9.5.5",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-docgen-typescript": "^1.20.5",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "clear": "rimraf coverage dist pages/generated",
    "prebuild": "yarn dist:prepare",
    "build": "cd dist && yarn build",
    "lint": "eslint src/**/*.ts{,x}",
    "parse": "yarn ts scripts/parse.ts",
    "start": "yarn parse --watch & next",
    "test": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --watchAll=false --coverageReporters=text-lcov | coveralls",
    "predocs:build": "yarn clear && yarn parse",
    "docs:build": "next build && next export",
    "predocs:deploy": "yarn docs:build",
    "docs:deploy": "gh-pages -d out",
    "postdocs:deploy": "yarn clear",
    "dist:prepare": "yarn clear && mkdir dist && cp -r src dist/src && cp tsconfig.maeven.json dist/tsconfig.json && cp LICENSE rollup.config.js dist/ && yarn ts scripts/makePackageJson.ts",
    "prepub": "yarn dist:prepare",
    "pub": "echo \"PUB\"",
    "prepublishOnly": "echo \"Use pub to publish\" && exit 1",
    "ts": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ts-node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:ci"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    },
    "transformIgnorePatterns": [
      "/node_modules/react-spring/"
    ],
    "setupFilesAfterEnv": [
      "./src/setupTests.ts"
    ],
    "modulePathIgnorePatterns": [
      ".old",
      ".next"
    ]
  }
}
